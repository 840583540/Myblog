.container{
  background-color: #ffffff;
}
.title{
  width: 100%;
  height:80rpx;
  line-height: 80rpx;  
  /* padding: 8rpx 8rpx; */
  padding-left: 20rpx;
  color: #333;
  font-size: 28rpx;
  background-color: #B3e5fc;
  position:fixed;
  left: 0;
  top: 0;
  z-index: 79;
}
.title view{
  width: 100rpx;
  height: 100%;
  text-align: center;
  display: inline-block;
}
.title .active{
  color: #fff;
  border-radius: 10%;
}
.cardList{
  width: 96%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 10rpx 10rpx;
  box-sizing: border-box;
  margin: auto;
  margin-top:30rpx;
} 
.cardList:first-child{
  margin-top: 100rpx;
}
.cardList:last-child{
  margin-bottom: 60rpx;
}
.head-msg{
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
}
.head-img{
  width: 60rpx;
  height: 60rpx;
  overflow: hidden;
}
.head-img image{
  width: 100%;
  height: 100%;
}
.head-name{
  margin-left: 4rpx;
  font-size: 28rpx;
  color: #666;
}
.head-time{
  font-size: 28rpx;
  margin-left: auto;
  color: #666;
}
.article-title{
  width: 100%;
  height: 50rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #212121;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.article-content{
  width: 100%;
  height: 80rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #757575;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
/*  */
.fix{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 80;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, .5);
}
/* 左侧弹出蓝 */
.left-seach{
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  z-index: 99;
  opacity: 0.8;
}
.left-seach{
 
  display: flex;
}
.left-seach .toch-bar{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #0288D1;
  color: #fff;
  position: absolute;
  left: 0;
  bottom:200rpx;
  border-radius: 50%;
  z-index: 90;
  opacity: 0.5;
}
.seach-body{  
  background-color:#fff;
  transition: 0.2s linear;   /*动画时间,速度*/
	-webkit-transition: 0.2s linear ;
	-moz-transition: 0.2s linear ;
	-ms-transition: 0.2s linear ;
  overflow: auto;
}
/* 快速导航列表 */
.left-title{
  width: 100%;
  height: 80rpx;
  background-color: #0288D1;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #fff;
}
.left-title icon{
  width: 60rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
}
.left-list{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #757575;
  margin-top: 10rpx;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
}